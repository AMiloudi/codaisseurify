<%= form_for @artist do |f| %>
<div class="form-group">
  <label>Name</label>
  <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
</div>

<div class="form-group">
  <label>Genre</label>
  <%= f.text_field :genre, placeholder: "Genre", class: "form-control" %>
</div>

<label>Add this Artist?</label>

<div class="actions">
  <%= f.submit "Save", class: "btn btn-primary" %>
</div>
<% end %>
